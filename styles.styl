.IQSelect {
  border 1px solid #999
  border-radius 4px
  font-family Arial, sans-serif
  position relative

  &__field {
    position relative

    &:before {
      content ''
      display block
      position absolute
      border-bottom none
      border-top: 8px solid #999
      border-right 6px solid transparent
      border-left 6px solid transparent
      top 50%
      right 24px
      transform translateY(-50%)
      transition transform 0.2s
      cursor pointer
    }
  }

  &__label {
    position absolute
    background #fff
    display inline-block
    padding 8px
    font-size 12px
    top 50%
    transform translateY(-50%)
    transition top 0.2s
    left 8px
  }

  &_hasValue_true, &_focus_true {
    .IQSelect__label {
      top: 0
      z-index 10
    }
  }

  &_focus_true {
    border-radius 4px 4px 0 0
    z-index 10

    &.IQSelect_openTo_top {
      border-radius 0 0 4px 4px
    }

    .IQSelect__input {
      background #fff
    }

    .IQSelect__field:before {
      z-index 10
      transform rotate(180deg) translateY(calc(-50% + 8px))
    }

    .IQSelect__dropdown {
      display block
    }
  }

  &__input {
    background transparent
    width 100%
    box-sizing border-box
    box-shadow none
    border none
    font-family Arial
    font-size 14px
    padding 16px 44px 16px 16px
    outline none
    position relative
    border-radius 4px
    cursor pointer
  }

  &__value {
    position absolute
    top 50%
    transform translateY(-50%)
    left 16px
    right: 44px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  &__dropdown {
    display none
    position absolute
    border 1px solid #999
    width 100%
    border-radius 0 0 4px 4px
    top 100%
    left -1px
    max-height 400px
    overflow auto
    background-color #fff
  }

  &__option {
    padding 16px
    cursor pointer

    &:hover {
      background-color #f4f4f4
    }

    &_matched_false {
      display none
    }
  }

  &__optionHighlight {
    text-decoration underline
    color orange
  }

  &__nativeSelect {
    display none
    width 100%
    height 100%
    top 0
    left 0
    position absolute
    opacity 0
  }

  &_mobile_true {
    .IQSelect__nativeSelect {
      display block
    }
  }

  &_openTo_top {
    .IQSelect__dropdown {
      top auto
      bottom 100%
      border-radius 4px 4px 0 0
    }
  }

  &__nothingFound {
    padding 16px;
  }
}